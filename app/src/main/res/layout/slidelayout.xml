<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/slideImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_statement"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/slideHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEADING"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsbold"
        android:textSize="25dp"
        android:layout_margin="40dp"
        android:layout_below="@id/slideImage"/>


    <TextView
        android:id="@+id/slideDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is some plenty test i dont even understand how i wrote instead of Lorem ipsum"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:fontFamily="@font/poppinsregular"
        android:textSize="15dp"
        android:layout_margin="40dp"
        android:layout_below="@id/slideHeader"/>




</RelativeLayout>